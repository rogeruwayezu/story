<ul>
  <% if @organization.errors.any? %>
     <% @organization.errors.full_messages.each do |message| %>
       <li class="model-errors"><%= message %></li> 
     <% end %>
  <% end %>
</ul>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="form_main">
                <h4 class="heading"><strong>Create</strong> Organization <span></span></h4>
                <%= form_tag "/organizations/#{@organization.id} ", method: :patch do %>
                    <input type="text" required="" placeholder="Please write the title" value="<%= @organization.title%> " name="title" class="txt">
                    <textarea placeholder="Email" name="email" value="<%= @organization.title%>" type="email" class="txt_3"></textarea>
                    <div>
                      <input type="hidden" name="user_id" class="form_control" value="<%= current_user.id %>">
                    </div>
                     <input type="submit" value="submit" class="txt2">
                <% end %>
      </div>
    </div>
  </div>
</div>